@page
@model SampleSignalR.Web.Pages.LoginModel
@{

}

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-reg-panel">
    <div class="login-info-box">
        <h2>Have an account?</h2>
        <p>Lorem ipsum dolor sit amet</p>
        <label id="label-register" for="log-reg-show">Login</label>
        <input type="radio" name="active-log-panel" id="log-reg-show" checked="checked">
    </div>

    <div class="register-info-box">
        <h2>Don't have an account?</h2>
        <p>Lorem ipsum dolor sit amet</p>
        <label id="label-login" for="log-login-show">Register</label>
        <input type="radio" name="active-log-panel" id="log-login-show">
    </div>

    <div class="white-panel">
        <form method="post" class="login-show">
            @Html.AntiForgeryToken()

            <h2>LOGIN</h2>
            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="LoginUserName" type="text" placeholder="Username">
            <span asp-validation-for="LoginUserName" class="text-danger"></span>

            <input asp-for="LoginPassword" type="password" placeholder="Password">
            <span asp-validation-for="LoginPassword" class="text-danger"></span>

            <input type="submit" value="Login" asp-page-handler="Login">
            <a href="#">Forgot password?</a>
        </form>
        <form method="post" class="register-show">
            <h2>REGISTER</h2>
            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="RegisterUserName" type="text" placeholder="Username">
            <span asp-validation-for="RegisterUserName" class="text-danger"></span>

            <input asp-for="RegisterPassword" type="password" placeholder="Password">
            <span asp-validation-for="RegisterPassword" class="text-danger"></span>

            <input asp-for="RegisterComparePassword" type="password" placeholder="Confirm Password">
            <span asp-validation-for="RegisterComparePassword" class="text-danger"></span>

            <input type="submit" value="Register" asp-page-handler="Register">
        </form>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            $('.login-info-box').fadeOut();
            $('.login-show').addClass('show-log-panel');
        });

        $('.login-reg-panel input[type="radio"]').on('change', function () {
            if ($('#log-login-show').is(':checked')) {
                $('.register-info-box').fadeOut();
                $('.login-info-box').fadeIn();

                $('.white-panel').addClass('right-log');
                $('.register-show').addClass('show-log-panel');
                $('.login-show').removeClass('show-log-panel');

            }
            else if ($('#log-reg-show').is(':checked')) {
                $('.register-info-box').fadeIn();
                $('.login-info-box').fadeOut();

                $('.white-panel').removeClass('right-log');

                $('.login-show').addClass('show-log-panel');
                $('.register-show').removeClass('show-log-panel');
            }
        });
    </script>
}